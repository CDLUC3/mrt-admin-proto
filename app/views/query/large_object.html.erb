<h1><%= title %>! </h1>

<%= link_to("Home", :controller => :menu, :action => :index) %>
<h2>Results</h2>

<div class="results">
<table class="results">
  <thead>
  <tr class="header">
    <th>Object Id</th>
    <th>Ark</th>
    <th>Billable Size</th>
  </tr>
  </thead>
  <tbody>
  <%
  data.each do |row|
  %>
    <tr class="row">
      <%
      row.each_with_index do |col, c|
        cname = (c == 2) ? "cell data" : "cell"
      %>
        <td class="<%= cname %>"><%= col %></td>
      <%
      end
      %>
    </tr>
  <%
  end
  %>
  </tbody>
</table>
</div>
