<h1><%= title %>! </h1>

<%= link_to("Home", :controller => :menu, :action => :index) %>
<h2><%= data.length %> Results</h2>

<div class="results">
<table class="results">
  <thead>
  <tr class="header">
    <%
    headers.each do |header|
    %>
    <th><%= header %></th>
    <%
    end
    %>
  </tr>
  </thead>
  <tbody>
  <%
  data.each do |row|
  %>
    <tr class="row">
      <%
      row.each_with_index do |col, c|
        cname = types[c]
        if (cname == 'data')
          col = number_with_delimiter(col, delimiter: ',')
        end
      %>
        <td class="cell %= cname %>"><%= col %></td>
      <%
      end
      %>
    </tr>
  <%
  end
  %>
  </tbody>
</table>
</div>
